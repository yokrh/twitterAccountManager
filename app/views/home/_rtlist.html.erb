<section class="container">
  <div class="heading">
    <img src="http://free-illustrations-ls01.gatag.net/images/lgi01a201401181000.jpg" />
    <h2>Retweet list</h2>
  </div>
  <% rts.each do |rt| %>
    <div class="row rt-container">
      <div class="col-md-2 icon">
        <div class="icon-image">
          <%= image_tag rt.user.profile_image_uri_https %>
        </div>
        <p class="username"><%= rt.user.name %></p>
        <p class="time"><%= rt.created_at.in_time_zone(user.time_zone).strftime("%Y-%m-%d %H:%M:%S") %></p>
      </div>
      <div class="col-md-6 content">
        <% content = rt %>
        <div class="row text">
          <p><%= simple_format(h(content.text)) %></p>
        </div>
        <div class="row items">
          <div class="col-md-1 rt-image">
            <img src="http://pic.prepics-cdn.com/020505/45831286.gif" />
          </div>
          <p class="col-md-2 rt-cnt"><%= content.retweet_count %></p>
          <div class="col-md-1 fav-image">
            <img src="http://www.civillink.net/esozai/img/pics2264.gif" />
          </div>
          <p class="col-md-2 fav-cnt"><%= content.favorites_count %></p>
        </div>
      </div>
    </div>
  <% end %>
</section>
