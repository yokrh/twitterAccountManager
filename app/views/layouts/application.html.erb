<!DOCTYPE html>
<html>
<head>
  <title>Twimane</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
  <% if current_user %>
    <%= link_to "Logout", logout_path, method: "delete" %>
  <% else %>
    <%= link_to "Login", '/auth/twitter' %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
